[flake8]
# Base flake8 configuration
max-line-length = 120
extend-ignore = E203, E266, E501, W503
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    ENV,
    build,
    dist,
    outputs,
    outputs_lgbm,
    outputs_tft,
    outputs_ensemble,
    *.egg-info,
    .ipynb_checkpoints

# Complexity settings
max-complexity = 15

# Docstring conventions
docstring-convention = google

per-file-ignores =
    __init__.py:F401
    tests/*:D100,D101,D102,D103
