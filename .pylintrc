[MAIN]
# Python code to execute, usually for sys.path manipulation
init-hook='import sys; sys.path.append(".")'

# Files or directories to be skipped
ignore=.venv,venv,build,dist,outputs,outputs_lgbm,outputs_tft,*.egg-info

# Use multiple processes to speed up Pylint
jobs=4

[MESSAGES CONTROL]
# Disable specific warnings
disable=
    C0103,  # Invalid name (sometimes necessary for scientific code)
    C0114,  # Missing module docstring
    C0115,  # Missing class docstring
    C0116,  # Missing function docstring
    R0913,  # Too many arguments
    R0914,  # Too many local variables
    R0915,  # Too many statements
    W0212,  # Protected access (sometimes needed)
    W0511,  # TODO/FIXME comments
    E1101,  # No member (false positives with numpy/pandas)
    R0801,  # Similar lines (common in tests)

[FORMAT]
# Maximum number of characters on a single line
max-line-length=120

# Maximum number of lines in a module
max-module-lines=1000

[DESIGN]
# Maximum number of arguments for function / method
max-args=10

# Maximum number of attributes for a class
max-attributes=15

# Minimum number of public methods for a class
min-public-methods=0

# Maximum number of public methods for a class
max-public-methods=25

[SIMILARITIES]
# Minimum lines number of a similarity
min-similarity-lines=10

# Ignore imports when computing similarities
ignore-imports=yes

[BASIC]
# Good variable names
good-names=i,j,k,x,y,z,df,ts,h,m,w,n,ax,fig,lr

# Regular expression for valid constant names
const-rgx=(([A-Z_][A-Z0-9_]*)|(__.*__))$

[IMPORTS]
# Deprecated modules
deprecated-modules=optparse,imp
